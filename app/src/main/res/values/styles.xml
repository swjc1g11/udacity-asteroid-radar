<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textColorSecondary">@color/text_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/app_background</item>
        <item name="alertDialogTheme">@style/AlertDialog.CustomTheme</item>
    </style>

    <style name="TextAppearance.Label" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.SecondaryText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialog.CustomTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
